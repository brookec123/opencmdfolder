{
  "name": "opencmdfolder",
  "displayName": "Open Command Folder",
  "description": "Opens a command prompt window from the folder that the file currently opened is in",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": ["Other"],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "opencmdfolder.openCmdFolder",
        "title": "Open Command Folder"
      }
    ],
    "keybindings": [
      {
        "command": "opencmdfolder.openCmdFolder",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceScheme == 'file'",
          "command": "opencmdfolder.openCmdFolder",
          "group": "navigation"
        }
      ]
    }
  },
  "activationEvents": [
    "onCommand:opencmdfolder.openCmdFolder"
  ],
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.84.0",
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "@vscode/test-electron": "^2.3.6"
  }
}
